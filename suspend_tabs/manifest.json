{
  "manifest_version": 3,
  "name": "Smart Tab Sleeper",
  "version": "1.2",
  "description": "Automatically suspends all inactive tabs except the active one to free up memory.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Suspend Inactive Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

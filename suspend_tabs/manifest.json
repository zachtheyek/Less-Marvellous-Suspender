{
    "manifest_version": 3,
    "name": "Less Marvellous Suspender",
    "version": "1.2",
    "description": "Automatically suspends all inactive tabs in the current window (sans the currently active one) to free up memory.",
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Suspend Inactive Tabs",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
